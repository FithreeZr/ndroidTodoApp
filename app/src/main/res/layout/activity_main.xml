        <!--/>-->

        <RelativeLayout
            android:id="@+id/relLayoutTopp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_topnav"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relLayoutMid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relLayoutTopp">

            <include layout="@layout/layout_centerviewpage"/>

        </RelativeLayout>

    </RelativeLayout>


